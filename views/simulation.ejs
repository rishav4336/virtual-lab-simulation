<%- include("partials/header") -%>
<%- include("partials/navbar") -%>
<div id="sim-container-1" class="container">
        <div id="menu" class="menu border p-1">
                
                <form id="menu-1">                        
                        <h3>Reactor Design</h3>

                        <label>Flow rate of NaOH, F<math><sub>A</sub></math> &nbsp;</label>
                        <input class="input-style" id="fa" type="number" step="0.1" name="fa" min="1" value="12"> LPH <br>
                        
                        <label>Flow rate of Ethyl Acetate, F<math><sub>B</sub></math> &nbsp;</label>
                        <input class="input-style" id="fb" type="number" step="0.1" name="fb" min="1" value="12"> LPH <br>

                        <label>Normality of NaOH in feed tank, N<math><sub>A</sub></math> &nbsp;</label>
                        <input class="input-style" id="na" type="number" step="0.1" name="na" min="0" value="0.1">  N          <br>
                        
                        <label>Normality of Ethyl Acetate in feed tank, N<math><sub>B</sub></math> &nbsp;</label>
                        <input class="input-style" id="nb" type="number" step="0.1" name="nb" min="0" value="0.1">  N          <br> 
                        
                        <label>Temperature, T &nbsp;</label>
                        <input class="input-range" id="temp-range" type="range" name="temp1" min="25" max="40" value="25" onmousemove="rangeSlider(this.value)" onchange="rangeSlider(this.value)"> <span id="rangeValue">25</span>&deg;C <br> 
                        
                        <button id="next-btn" class="button m-1" type="button">Next</button>
                </form>

                <div id="menu-2" class="menu p-1 hide">
                        
                        <form id="pfr-config" class="border m-1 p-1">
                                <b>Change here to add new PFR:</b> <br>
                                
                                <label>Length of PFR, L &nbsp;</label>
                                <input class="input-style" id="pfrLen" type="number" name="pfrLen" min="0" step="1" value="1"> m <br>
                                
                                <label>Diameter of PFR, D &nbsp;</label>
                                <input class="input-style" id="pfrDia" type="number" name="pfrDia" min="0" step="0.01" value="3.5"> cm 
                                
                                &nbsp; &nbsp; 
                                <button id="pfr-btn" class="button m-1" type="button">Add PFR</button>
                        
                        </form>
                       
                        <form id="cstr-config" class="border m-1 p-1">
                                <b>Change here to add new CSTR:</b> <br>
                                
                                <label>Volume of CSTR, V  &nbsp;</label>
                                <input class="input-style" id="cstrVol" type="number" name="cstrVol" min="0" step="0.01" value="0.97"> L 
                                
                                &nbsp; &nbsp;
                                <button id="cstr-btn" class="button default-margin" type="button" >Add CSTR</button> 
                        </form >
                       
                        <button id="draw-btn" class="button m-1" type="button">Submit</button>
                        
                        <button id="data-btn" class="button m-1" type="button">Show data</button>

                        <!-- result of conversion -->
                        <div style="background-color: rgb(192, 248, 161);" id="res-config" class="border m-1 p-1 hide"> <!--style="background-color: greenyellow;" -->
                                <math>X<sub>A</sub> = <span id="res-1" style="color: green;"></span></math> and 
                                <math>Ï„ = <span id="res-2" style="color: green;"></span></math>
                        </div>
                </div>
        </div>
       
        <canvas id="canvas-1" class="container border" style="max-height:400px; height: auto; margin-right: auto; margin-left: auto;">
       
        </canvas>
</div>

<div class="container reactor-display">
        <!-- to remove the margins between pipe and reactors </div is left open and closed in next line -->      
</div>

<script src="/js/reactor.js"></script>
<script type="text/javascript">
        function rangeSlider(value){
                document.getElementById('rangeValue').innerHTML=value;
        }
</script>
<%- include("partials/footer") -%>
